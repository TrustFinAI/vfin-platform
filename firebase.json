{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "server/**",
      "dist/**",
      "package-lock.json",
      "server/tsconfig.json",
      "dockerfile-content.txt",
      "dockerignore-content.txt",
      "README.md",
      "docs/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
